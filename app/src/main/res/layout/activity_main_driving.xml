<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDrivingActivity"
    android:layoutDirection="ltr"
    android:background="@color/white"
    android:id="@+id/drawer_layout">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"/>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/percentBox"
                    android:layout_width="168dp"
                    android:layout_height="215dp"
                    android:layout_marginTop="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/rectangle_box"/>

                    <LinearLayout
                        android:id="@+id/statistic"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layoutDirection="ltr"
                        android:orientation="vertical"
                        android:paddingTop="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="0dp"
                            android:paddingRight="6dp">

                            <TextView
                                android:id="@+id/speedTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:alpha="0.94"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center_horizontal"
                                android:paddingLeft="17dp"
                                android:text="105"
                                android:textAlignment="textStart"
                                tools:ignore="RtlCompat"
                                android:textColor="#000000"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.22"
                                android:alpha="0.82"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center_horizontal"
                                android:paddingTop="4dp"
                                android:text="km/h"
                                android:textAlignment="center"
                                android:textColor="#DF000000"
                                android:textSize="10sp" />


                            <TextView
                                android:textColor="@color/grey"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center"
                                android:paddingRight="3dp"
                                android:text="سرعت:"
                                android:textAlignment="center"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="#7E7E7E" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingLeft="14dp"
                            android:paddingTop="0dp"
                            android:paddingRight="7dp">

                            <TextView
                                android:id="@+id/driveTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.27"
                                android:alpha="0.94"
                                android:fontFamily="@font/iran_sans"
                                android:paddingLeft="4dp"
                                android:text="2:34"
                                android:textColor="#000000"
                                android:textSize="13sp" />

                            <TextView
                                android:textColor="@color/grey"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.73"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center_horizontal"
                                android:paddingLeft="0dp"
                                android:text="رانندگی بدون توقف:"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="#7E7E7E" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/WeatherTypeImage"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_weight="0.3"
                                android:gravity="center_horizontal"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/WeatherTypeTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:alpha="0.94"
                                android:gravity="center_horizontal"
                                android:paddingBottom="3dp"
                                android:text="ابری"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="#000000" />

                            <TextView
                                android:textColor="@color/grey"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/iran_sans"
                                android:gravity="center"
                                android:paddingRight="8dp"
                                android:paddingBottom="3dp"
                                android:text="آب و هوا:"
                                android:textAlignment="center"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <FrameLayout
                        android:layout_width="155dp"
                        android:layout_height="150dp"
                        android:layout_gravity="bottom|center">

                        <ImageView
                            android:id="@+id/driving_background"
                            android:layout_width="138dp"
                            android:layout_height="135dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/circle_gradient_green" />

                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/driving_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="9.5dp"
                            android:fontFamily="@font/product_sans_bold"
                            android:lines="1"
                            android:paddingEnd="6dp"
                            android:text="64%"
                            android:textSize="33sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/driving_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:textAlignment="center"
                            android:paddingEnd="5dp"
                            android:text="بسیار ایمن"
                            android:fontFamily="@font/sadgan_medium"
                            android:textSize="10.5sp"
                            android:textColor="#9A000000" />

                    </FrameLayout>
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:alpha="1"
                    android:layoutDirection="ltr">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#7E7E7E"
                        android:alpha="0.92"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="22.5dp"
                            android:layout_height="22.5dp"
                            android:layout_marginTop="5.5dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/menu_icon"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_marginLeft="6dp"
                            android:id="@+id/menuButton"/>


                        <FrameLayout
                            android:id="@+id/flContent"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>



                    <FrameLayout
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:alpha="0.2"
                            android:elevation="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="درصد رانندگی سالم"
                            android:textColor="#191919"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/iran_sans"
                            android:alpha="1" />

                    </FrameLayout>

                </FrameLayout>



            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/alertMessageBox"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/rectangle_alert_background_red"
            android:alpha="0.93">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="42dp"
                android:paddingRight="7.5dp"
                android:paddingLeft="10dp"
                android:alpha="0.9"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/alertMessageImage"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/alert_icon"/>

                <TextView
                    android:id="@+id/alertMessageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl"
                    android:minHeight="39dp"
                    android:text="از سرعت خود بکاهید!"
                    android:textColor="#FFFFFF"
                    android:textSize="12.88sp"
                    android:layout_gravity="right"
                    android:paddingTop="8dp"
                    android:fontFamily="@font/iran_sans"
                    android:paddingRight="5dp"/>
            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/parkingButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_above="@+id/restButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="12dp"
            android:alpha="0.9"
            android:background="@drawable/parking_button_icon" />


        <Button
            android:id="@+id/restButton"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_above="@+id/alertMessageBox"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="45dp"
            android:alpha="0.9"
            android:background="@drawable/gas_station_button_icon" />

        <Button
            android:visibility="invisible"
            android:id="@+id/back2mapButton"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_above="@+id/alertMessageBox"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="45dp"
            android:alpha="0.9"
            android:background="@drawable/map_pointer" />


    </RelativeLayout>


   <com.google.android.material.navigation.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"/>

</androidx.drawerlayout.widget.DrawerLayout>